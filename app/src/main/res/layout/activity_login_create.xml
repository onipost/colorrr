<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/root"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <include layout="@layout/_toolbar"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:gravity="center_horizontal">

        <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="91dp"
                android:layout_marginTop="45dp">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/area_photo"/>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="73dp"
                    android:layout_height="73dp"
                    android:layout_marginStart="4.2dp"
                    android:layout_marginTop="4.2dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="36.5dp">
                <ImageView
                        android:id="@+id/photo_preview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/mask"/>
            </com.google.android.material.card.MaterialCardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/photo"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="2.9dp"
                    android:layout_marginBottom="2.9dp"
                    android:background="@color/white"
                    app:cardCornerRadius="11dp"
                    app:cardElevation="0dp">
                <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/add_on"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <app.colorrr.colorrr.views.TextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/display_name"
                        android:textColor="@color/greyish_70"/>
                <app.colorrr.colorrr.views.EditTextRegular
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textColorHint="@color/pinkish_grey"
                        android:textColor="@color/darkish_pink"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:hint="@string/display_name"
                        android:background="@null"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_three"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp">
                <app.colorrr.colorrr.views.TextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Email"
                        android:textColor="@color/greyish_70"/>
                <app.colorrr.colorrr.views.EditTextRegular
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textColorHint="@color/pinkish_grey"
                        android:textColor="@color/darkish_pink"
                        android:textSize="16sp"
                        android:inputType="textEmailAddress"
                        android:hint="@string/enter_your_email_address"
                        android:background="@null"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_three"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp">
                <app.colorrr.colorrr.views.TextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/confirm_email"
                        android:textColor="@color/greyish_70"/>
                <app.colorrr.colorrr.views.EditTextRegular
                        android:id="@+id/re_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textColorHint="@color/pinkish_grey"
                        android:textColor="@color/darkish_pink"
                        android:textSize="16sp"
                        android:inputType="textEmailAddress"
                        android:hint="@string/re_enter_your_email_address"
                        android:background="@null"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_three"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp">
                <app.colorrr.colorrr.views.TextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Password"
                        android:textColor="@color/greyish_70"/>
                <app.colorrr.colorrr.views.EditTextRegular
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textColorHint="@color/pinkish_grey"
                        android:textColor="@color/darkish_pink"
                        android:textSize="16sp"
                        android:inputType="textPassword"
                        android:hint="@string/enter_your_password"
                        android:background="@null"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_three"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp">
                <app.colorrr.colorrr.views.TextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/confirm_password"
                        android:textColor="@color/greyish_70"/>
                <app.colorrr.colorrr.views.EditTextRegular
                        android:id="@+id/re_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textColorHint="@color/pinkish_grey"
                        android:textColor="@color/darkish_pink"
                        android:textSize="16sp"
                        android:inputType="textPassword"
                        android:hint="@string/re_enter_your_password"
                        android:background="@null"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_three"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/_loader"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>