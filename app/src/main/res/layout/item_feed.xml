<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="24dp">
    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="7dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="82dp">
            <app.colorrr.colorrr.views.RoundedRelativeLayout
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="16dp">
                <ImageView
                        android:id="@+id/user_avatar"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/mask2"/>
            </app.colorrr.colorrr.views.RoundedRelativeLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <app.colorrr.colorrr.views.TextViewSemiBold
                        android:id="@+id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:text="@string/Followed"/>
                <app.colorrr.colorrr.views.TextViewSemiBold
                        android:id="@+id/post_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textSize="10sp"
                        android:textColor="@color/warm_grey_two"
                        android:text="@string/Followed"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="17dp"
                android:gravity="center_vertical">
            <ImageView
                    android:id="@+id/follow"
                    android:layout_width="16dp"
                    android:layout_height="14dp"
                    android:layout_marginEnd="21dp"
                    android:src="@drawable/follow"/>

            <ImageView
                    android:id="@+id/info"
                    android:layout_width="13dp"
                    android:layout_height="24dp"
                    android:padding="5dp"
                    android:src="@drawable/info"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/cover_container"
            android:layout_width="match_parent"
            android:layout_height="316dp">
        <ImageView
                android:id="@+id/placeholder"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_centerInParent="true"
                android:src="@drawable/item_loading"/>
        <ImageView
                android:id="@+id/post_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
    </RelativeLayout>
    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:gravity="center_vertical">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="14dp">
                <ImageView
                        android:id="@+id/post_liked"
                        android:layout_width="24dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="1dp"
                        android:padding="5dp"
                        android:src="@drawable/button_like"/>
                <app.colorrr.colorrr.views.TextViewRegular
                        android:id="@+id/post_likes_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="@color/apricot"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/comments"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                <ImageView
                        android:layout_width="24dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="1dp"
                        android:padding="5dp"
                        android:src="@drawable/button_comment"/>
                <app.colorrr.colorrr.views.TextViewRegular
                        android:id="@+id/post_comments_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="@color/apricot"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
                android:id="@+id/post_recolor"
                android:layout_width="27dp"
                android:layout_height="22dp"
                android:padding="5dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/button_brush"/>
    </RelativeLayout>
</LinearLayout>